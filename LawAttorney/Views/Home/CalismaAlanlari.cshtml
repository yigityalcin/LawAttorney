    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="container-fluid">
    <!-- Üstteki Kart -->
    <section class="about-us-section mt-5">
        <div class="container">
            <div class="row align-items-center">
                <!-- Üstteki Kart Column -->
                <div class="col-lg-12">
                    <div class="card bg-white shadow">
                        <div class="card-body">
                            <h2 class="card-title text-center mb-4">Hukuk Alanındaki Çalışma Alanlarımız</h2>
                            <p class="card-text">
                                Hukuk alanındaki çeşitli konularda sunduğumuz hizmetlerle ilgili detaylar burada yer alacak.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Hukuk Alanları Kartları -->
    <section class="mt-5">
        <div class="container">
            <div class="row">
