@{
    ViewData["Title"] = "Ekibimiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Custom Styles */
    .ekip {
        border: none;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease;
        border: 1px solid #ccc;
        margin-bottom: 20px;
    }

        .ekip img {
            object-fit: cover;
            height: 300px;
            width: 100%;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .ekip .card-body {
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        .ekip .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
            text-align: center;
        }

            .ekip .card-title::after {
                content: "";
                display: block;
                margin: 10px auto;
                width: 50%;
                height: 2px;
                background-color: #013a33;
            }

        .ekip .card-bio {
            color: #555;
            margin-bottom: 15px;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }

        .ekip .read-more-btn {
            cursor: pointer;
            color: #fff; /* Rengi değiştirildi */
            background-color: #013a33; /* Arkaplan rengi eklendi */
            padding: 10px 20px; /* Daha belirgin bir buton boyutu için padding eklendi */
            border: none;
            border-radius: 5px; /* Butonun köşelerini yuvarlamak için border-radius eklendi */
            transition: background-color 0.3s ease; /* Hover efekti için geçiş efekti eklendi */
            text-decoration: none; /* Alt çizgiyi kaldırmak için text-decoration eklendi */
            display: inline-block; /* Diğer içeriklerle sıkışmadan yan yana gelmesi için display özelliği eklendi */
            margin-top: 10px; /* Butonu biraz aşağı kaydırmak için margin eklendi */
        }

            .ekip .read-more-btn:hover {
                background-color: #007a68; /* Hover olduğunda rengi değiştirmek için başka bir renk eklendi */
                color: #fff; /* Hover olduğunda metin rengini değiştirmek için eklendi */
            }

        .ekip .card-mail {
            color: #555;
            text-decoration: underline;
            cursor: pointer;
            align-self: center;
        }

    /* Modal Header */
    .modal-header {
        background-color: #013a33;
        color: #fff;
        border-bottom: 1px solid #ccc;
    }

    .modal-title {
        font-size: 1.8rem;
        font-weight: bold;
    }

    /* Modal Body */
    .modal-body {
        font-size: 1rem;
        line-height: 1.6;
        color: #555;
    }

    /* Modal Footer */
    .modal-footer {
        border-top: 1px solid #ccc;
    }

    /* Close Button */
    .btn-close {
        color: #fff;
    }

    /* Bio İçeriği için Stil */
    .modal-bio-img {
        max-width: 100%;
        height: auto;
        border-radius: 10px;
        margin-bottom: 15px;
    }

    .modal-bio-name {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .modal-bio-mail {
        color: #013a33;
        text-decoration: underline;
        cursor: pointer;
        margin-top: 10px;
    }

    .bio-content {
        text-align: justify;
        margin-bottom: 15px; /* Paragraflar arası alt boşluk ekleniyor */
        margin-top: 0.75em; /* Paragraflar arası üst boşluk ekleniyor */
    }
    /* End Custom Styles */
</style>

