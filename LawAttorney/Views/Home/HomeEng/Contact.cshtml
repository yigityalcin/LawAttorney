@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_LayoutEng.cshtml";
}
<body>
    <section class="ftco-section-contact">
        <div class="container">
            <div class="custom-img1 mb-5 shadow">
                <img class="custom-img1 mb-4 shadow" src="~/assets/img/Banners/banner900.png" />
                <span>Contact</span>
            </div>
        </div>
        <div class="container">
            <ol class="breadcrumb border-1 border-bottom">
                <li class="breadcrumb-item"><a href="Index">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Contact</li>
            </ol>
        </div>
    </section>
    <div class="container-fluid contact-container">
        <section class="ftco-section-contact">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-sm-12">
                        <div class="wrapper">
                            <div class="row mt-lg-3 mb-lg-3 ">
                                <div class="col-sm-6 d-flex justify-content-center align-items-center">
                                    <div id="map" class="mx-auto">
                                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12778.58353906125!2d34.6317753!3d36.8030399!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1527f32c1c8ebebb%3A0x92f37dbbab12a79f!2sAvukat%20Yunus%20Emre%20%C3%96z!5e0!3m2!1str!2str!4v1707275164060!5m2!1str!2str"
                                                height="628" style="width: 100%; border: 0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="embed-responsive-item">
                                        </iframe>
                                    </div>
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <div class="contact-wrap w-100 p-md-5 p-4 focusedInput">
                                        <h3 class="">Contact Us</h3>
                                        <h6 class="mb-4"><p>Quick Contact Form</p></h6>

                                        <div id="form-message-warning" class="mb-4"></div>
                                        <div id="form-message-success" class="mb-4">
                                        </div>
                                        <form id="contactForm" name="contactForm" class="contactForm">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label class="label" for="name">Full Name</label>
                                                        <input type="text" class="form-control" name="name" id="name" placeholder="Your Name" required>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label class="label" for="email">Email Address</label>
                                                        <input type="email" class="form-control" name="email" id="email" placeholder="Email" required>
                                                    </div>
                                                </div>
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <label class="label" for="subject">Subject</label>
                                                        <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" required>
                                                    </div>
                                                </div>
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <label class="label" for="#">Message</label>
                                                        <textarea name="message" class="form-control" id="message" cols="30" rows="4" placeholder="Your Message" required></textarea>
                                                    </div>
                                                </div>
                                                <div class="g-recaptcha" data-sitekey="6LfQRoEpAAAAADsMN7HE34TC-bEqxTJ2ph7RWgxc"></div>
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <input type="submit" value="Mesaj Gönder" class="btn" style="background-color:#013a33 !important; color:white;">
                                                        <div class="submitting"></div>
                                                    </div>
                                                </div>
                                                <div id="success-message" style="display: none; color: green;">Form submitted successfully!</div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-0 shadow mb-4">
                    <div class="col-sm-3 col-lg-3">
                        <div class="dbox w-100 text-center mt-lg-3">
                            <div class="icon d-flex align-items-center justify-content-center shadow-lg">
                                <span class="fa fa-phone"></span>
                            </div>
                            <div class="text">
                                <p><span>Phone Number:</span>0532 499 1974</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-lg-3 border-start">
                        <div class="dbox w-100 text-center mt-lg-3">
                            <div class="icon d-flex align-items-center justify-content-center shadow-lg">
                                <span class="fa fa-paper-plane"></span>
                            </div>
                            <div class="text">
                                <p><span>Email:</span> <a href="mailto:info@ozpartnershukuk.com">info@ozpartnershukuk.com</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-lg-3 border-start">
                        <div class="dbox w-100 text-center mt-lg-3">
                            <div class="icon d-flex align-items-center justify-content-center shadow-lg">
                                <span class="fa fa-clock"></span>
                            </div>
                            <div class="text">
                                <p>
                                    <span>Working Hours:</span>
                                    <span>Weekdays: 09:00 AM - 05:00 PM</span>
                                    <span>Weekends: Closed</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-lg-3 border-start">
                        <div class="dbox w-100 text-center mt-lg-3">
                            <div class="icon d-flex align-items-center justify-content-center shadow-lg">
                                <span class="fa fa-map-marker"></span>
                            </div>
                            <div class="text">
                                <p>
                                    <span>Address:</span>
                                    <span>
                                        Camişerif District, Çakmak Street, Kadri Bey Apartment, Floor: 3, No: 16, Akdeniz / Mersin
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script type="text/javascript" src="~/js/contact-us-en.js"></script>
    <script>
    </script>
</body>
