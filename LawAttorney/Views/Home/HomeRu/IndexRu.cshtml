@{
    ViewData["Title"] = "IndexRu";
    Layout = "~/Views/Shared/_LayoutRu.cshtml";
}

<body>
    <!-- Мачт-хед -->
    <div class="container">
        <div class="">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Слайд 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Слайд 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Слайд 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/assets/img/Carousel/CarouselNew1.jpeg" class="carousel-img d-block" alt="Второй слайд">
                        <div class="carousel-caption d-none d-md-block">
                            <span>Mersin/Uzuncaburç</span>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/assets/img/Carousel/CarouselNew2.jpeg" class="carousel-img d-block" alt="Первый слайд">
                        <div class="carousel-caption d-none d-md-block">
                            <span>Mersin/Liman</span>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/assets/img/Carousel/CarouselNew3.jpg" class="carousel-img d-block" alt="Третий слайд">
                        <div class="carousel-caption d-none d-md-block">
                            <span>Mersin/Metropol</span>
                        </div>
                    </div>
                </div>
                <!-- Стрелка влево -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Предыдущий</span>
                </button>
                <!-- Стрелка вправо -->
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Следующий</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Иконки сетки-->
    <div class="features-icons text-center bg-white">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                    <div class="features-icons-item mx-auto mb-lg-5 mb-lg-0 mb-lg-3 border shadow" id="CalismaAlanlari">
                        <div class="features-icons-icon d-flex"><i class="bi-bank m-auto" style="color: #013A33;"></i></div>
                        <h3 style="color:#013A33;">Наши услуги</h3>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                    <div class="features-icons-item mx-auto mb-lg-5 mb-lg-0 mb-lg-3 border shadow" id="Ekibimiz">
                        <div class="features-icons-icon d-flex"><i class="bi-person m-auto" style="color: #013A33;"></i></div>
                        <h3 style="color: #013A33;">Наша команда</h3>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                    <div class="features-icons-item mx-auto mb-lg-0 mb-lg-3 border shadow" id="İletisim">
                        <div class="features-icons-icon d-flex"><i class="bi-telephone-fill m-auto" style="color: #013A33;"></i></div>
                        <h3 style="color: #013A33;">Контакты</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var carouselElement = document.getElementById('carouselExampleFade');

            if (carouselElement) {
                try {
                    var carouselInstance = new bootstrap.Carousel(carouselElement, {
                        interval: 5000, // Интервал автоматического перехода (2 секунды)
                        pause: 'hover' // Пауза при наведении мыши
                    });

                    console.log('Карусель успешно инициализирована.');
                } catch (error) {
                    console.error('Ошибка при инициализации карусели:', error.message);
                }
            } else {
                console.error('Элемент карусели не найден.');
            }
        });

        // Перенаправление страницы с использованием Vanilla JavaScript
        document.getElementById('CalismaAlanlari').addEventListener('click', function () {
            window.location.href = '/Home/PracticeAreasRu'; // URL страницы "Наши услуги"
        });

        document.getElementById('Ekibimiz').addEventListener('click', function () {
            window.location.href = '/Home/OurTeamRu'; // URL страницы "Наша команда"
        });

        document.getElementById('İletisim').addEventListener('click', function () {
            window.location.href = '/Home/ContactRu'; // URL страницы "Контакты"
        });
    </script>
</body>



