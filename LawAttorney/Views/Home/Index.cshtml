<body>
    <div class="container">
        <div class="mb-5">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/assets/img/Carousel/CarouselNew1.jpeg" class="carousel-img d-block" alt="Second Slide">
                        <div class="carousel-caption d-md-block">
                            <span>Mersin/Uzuncaburç</span>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/assets/img/Carousel/CarouselNew2.jpeg" class="carousel-img d-block" alt="First Slide">
                        <div class="carousel-caption d-md-block">
                            <span>Mersin/Liman</span>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/assets/img/Carousel/CarouselNew3.jpg" class="carousel-img d-block" alt="Third Slide">
                        <div class="carousel-caption d-md-block">
                            <span>Mersin/Metropol</span>
                        </div>
                    </div>             
                </div>
                <div class="carousel-captionWelcome">
                    <h3>Öz & Partners Avukatlık Ortaklığı'na Hoşgeldiniz!'</h3>
                    <p></p>
                </div>
                <!-- Sol ok -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <!-- Sağ ok -->
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="features-icons text-center">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                    <div class="features-icons-item mx-auto mb-lg-5 mb-lg-0 mb-lg-3 d-flex align-items-center shadow justify-content-center" id="CalismaAlanlari">
                        <h3>Çalışma Alanlarımız</h3>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                    <div class="features-icons-item mx-auto mb-lg-5 mb-lg-0 mb-lg-3 d-flex align-items-center shadow justify-content-center" id="Ekibimiz">
                        <h3>Ekibimiz</h3>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                    <div class="features-icons-item mx-auto mb-lg-0 mb-lg-3 d-flex align-items-center shadow justify-content-center" id="İletisim">
                        <h3>İletişim</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var carouselElement = document.getElementById('carouselExampleFade');

            if (carouselElement) {
                try {
                    var carouselInstance = new bootstrap.Carousel(carouselElement, {
                        interval: 5000, // Automatic transition interval (2 seconds)
                        pause: 'hover' // Pause on mouseover
                    });

                    console.log('Carousel initialized successfully.');
                } catch (error) {
                    console.error('Error initializing carousel:', error.message);
                }
            } else {
                console.error('Carousel element not found.');
            }
        });
        // Vanilla JavaScript ile sayfa yönlendirme
        document.getElementById('CalismaAlanlari').addEventListener('click', function () {
            window.location.href = '/Home/CalismaAlanlari'; // Hizmetlerimiz sayfa URL'i
        });

        document.getElementById('Ekibimiz').addEventListener('click', function () {
            window.location.href = '/Home/Ekibimiz'; // Ekibimiz sayfa URL'i
        });

        document.getElementById('İletisim').addEventListener('click', function () {
            window.location.href = '/Home/İletisim'; // İletişim sayfa URL'i
        });
    </script>
</body>
