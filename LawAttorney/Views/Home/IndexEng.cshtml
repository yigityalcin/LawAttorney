
@{
    ViewData["Title"] = "IndexEng";
    Layout = "~/Views/Shared/_LayoutEng.cshtml";
}

<body>
    <!-- Masthead-->
    <div class="container">
        <div class="border-masthead masthead">
            <div id="carouselExample" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/assets/img/heralandatecrube.jpg" class="d-block w-100" alt="Second Slide">
                    </div>
                    <div class="carousel-item">
                        <img src="~/assets/img/yarımasırfoto.jpg" class="d-block w-100" alt="First Slide">
                    </div>
                    <!-- <div class="carousel-item">
                        <img src="~/assets/img/ozarka3.jpg" class="d-block w-100" alt="Third Slide">
                    </div> -->
                </div>
                <!-- Left arrow -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <!-- Right arrow -->
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Icons Grid-->
    <div class="features-icons text-center  bg-white">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3 border" id="ServiceAreas">
                        <div class="features-icons-icon d-flex"><i class="bi-bank m-auto" style="color: #093A34;"></i></div>
                        <h3 style="color:#093A34;">Our Services</h3>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3 border" id="OurTeam">
                        <div class="features-icons-icon d-flex"><i class="bi-person m-auto" style="color: #093A34;"></i></div>
                        <h3 style="color: #093A34;">Our Team</h3>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="features-icons-item mx-auto mb-0 mb-lg-3 border" id="Contact">
                        <div class="features-icons-icon d-flex"><i class="bi-telephone-fill m-auto" style="color: #093A34;"></i></div>
                        <h3 style="color: #093A34;">Contact</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var carouselElement = document.getElementById('carouselExample');

            if (carouselElement) {
                try {
                    var carouselInstance = new bootstrap.Carousel(carouselElement, {
                        interval: 3000, // Automatic transition time (3 seconds)
                        pause: 'hover' // Pause automatic transition on hover
                    });

                    console.log('Carousel initialized successfully.');
                } catch (error) {
                    console.error('Error initializing carousel:', error.message);
                }
            } else {
                console.error('Carousel element not found.');
            }
        });

        // Page navigation with Vanilla JavaScript
        document.getElementById('ServiceAreas').addEventListener('click', function () {
            window.location.href = 'ServiceAreas'; // URL of Our Services page
        });

        document.getElementById('OurTeam').addEventListener('click', function () {
            window.location.href = 'OurTeam'; // URL of Our Team page
        });

        document.getElementById('Contact').addEventListener('click', function () {
            window.location.href = 'Contact'; // URL of Contact page
        });
    </script>
</body>
