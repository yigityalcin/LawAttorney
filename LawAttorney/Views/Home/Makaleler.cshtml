<style>
    /* Custom Styles */
    .card {
        border: none;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease;
        height: 270px; /* Sabit kart yüksekliği */
        border: 1px solid #ccc;
    }

        .card:hover {
            transform: scale(1.05);
        }

        .card img {
            object-fit: cover;
            height: 100px;
            width: 100%;
            border-bottom: 1px solid #ddd;
        }

    .card-body {
        padding: 20px;
        height: 100%;
        overflow-y: auto; /* İçerik uzunluğu boyutu aşarsa scrollbar görüntüle */
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card-date {
        color: #555;
        font-size: 0.9rem;
    }

    .card-text {
        color: #555;
        margin-bottom: 15px;
    }

    .btn-primary {
        background-color: #013A33; /* Green color for buttons */
        border: 1px solid #013A33;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #145d35; /* Darker green color for button hover */
            border: 1px solid #145d35;
        }

    .latest-articles {
        margin-top: 20px;
    }

    /* End Custom Styles */
</style>

