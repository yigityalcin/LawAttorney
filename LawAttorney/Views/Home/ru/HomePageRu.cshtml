@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_LayoutRu.cshtml";
}
<body>
    <div class="container">
        <div class="mb-5">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/assets/img/Carousel/CarouselNew3.2.jpg" class="carousel-img d-block" alt="Second Slide">
                        <div class="carousel-caption d-md-block">
                            <span><em>Mersin/Metropol</em></span>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/assets/img/Carousel/CarouselKale2.jpeg" class="carousel-img d-block" alt="First Slide">
                        <div class="carousel-caption d-md-block">
                            <span><em>Mersin/Kızkalesi</em></span>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/assets/img/Carousel/CarouselLiman.jpeg" class="carousel-img d-block" alt="Third Slide">
                        <div class="carousel-caption d-md-block">
                            <span><em>Mersin/Liman</em></span>
                        </div>
                    </div>
                </div>
                <div class="carousel-captionWelcome">
                    <h3>Добро пожаловать в юридическую фирму 'Юз и Партнерс'!</h3>
                </div>
                <!-- Стрелка влево -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Предыдущий</span>
                </button>
                <!-- Стрелка вправо -->
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Следующий</span>
                </button>
            </div>
        </div>
        <div class="features-icons text-center">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                    <div class="features-icons-item mx-auto mb-lg-5 mb-lg-0 mb-lg-3 d-flex align-items-center shadow justify-content-center" id="CalismaAlanlarimiz">
                        <h3>Наши услуги</h3>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                    <div class="features-icons-item mx-auto mb-lg-5 mb-lg-0 mb-lg-3 d-flex align-items-center shadow justify-content-center" id="Ekibimiz">
                        <h3>Наша команда</h3>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 mb-4">
                    <div class="features-icons-item mx-auto mb-lg-0 mb-lg-3 d-flex align-items-center shadow justify-content-center" id="iletisim">
                        <h3>Контакты</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var carouselElement = document.getElementById('carouselExampleFade');

            if (carouselElement) {
                try {
                    var carouselInstance = new bootstrap.Carousel(carouselElement, {
                        interval: 5000, // Интервал автоматического перехода (2 секунды)
                        pause: 'hover' // Пауза при наведении мыши
                    });

                    console.log('Карусель успешно инициализирована.');
                } catch (error) {
                    console.error('Ошибка при инициализации карусели:', error.message);
                }
            } else {
                console.error('Элемент карусели не найден.');
            }
        });

        // Перенаправление страницы с использованием Vanilla JavaScript
        document.getElementById('CalismaAlanlarimiz').addEventListener('click', function () {
            window.location.href = '/ru/PracticeAreasRu'; // URL страницы "Наши услуги"
        });

        document.getElementById('Ekibimiz').addEventListener('click', function () {
            window.location.href = '/ru/OurTeamRu'; // URL страницы "Наша команда"
        });

        document.getElementById('iletisim').addEventListener('click', function () {
            window.location.href = '/ru/ContactRu'; // URL страницы "Контакты"
        });
    </script>
</body>



