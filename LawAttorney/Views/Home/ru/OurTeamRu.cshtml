        font-weight: 400;
        font-style: oblique;
    }

    /* Modal Body */
    .modal-body {
        font-size: 1rem;
        line-height: 1.6;
        color: #555;
    }

    /* Modal Footer */
    .modal-footer {
        border-top: 1px solid #ccc;
    }

    /* Close Button */
    .btn-close {
        color: #ffffff !important;
        background-color: #ffffff;
    }

    /* Bio İçeriği için Stil */
    .modal-bio-img {
        max-width: 100%;
        height: auto;
        border-radius: 10px;
        margin-bottom: 15px;
    }

    .modal-bio-name {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 10px;
