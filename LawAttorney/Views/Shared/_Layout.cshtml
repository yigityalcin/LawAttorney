<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LawAttorney</title>
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LawAttorney.styles.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/assets/flaticon.css">
    <link rel="stylesheet" href="~/css/animate.css">
</head>

<body>
    <div class="container-fluid">
        <div class="container">
            <nav class="navbar navbar-expand-lg mb-3">
                <!-- Logo -->
                <a class="navbar-brand ms-4 mt-2" href="/Home/Index">
                    <img src="~/assets/img/Logo/ailogo27.png" alt="Logo" height="80" class="img-brand">
                </a>
                <!-- Toggle button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Menü Sekmeleri -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-lg-0 me-lg-1">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Kurumsal">Kurumsal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Ekibimiz">Ekibimiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/CalismaAlanlari">Çalışma Alanları</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Makaleler">Makaleler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/İletisim">İletişim</a>
                        </li>
                    </ul>
                </div>
                <!-- Sağdaki Elemanlar ve Dikdörtgen Butonlar -->
                <div class="d-flex butonlar align-items-center ms-4 me-3">
                    <!-- Dil Seçimi ve Mail Gönderme Butonları -->
                    <div class="d-md-flex butonlar-mail align-items-center gap-2 ms-5 me-1 order-4">
                        <!-- Vanilla JavaScript ile -->
                        <!-- <a href="https://wa.me/%2B905343461030" class="btn btn-sm text-white" style="background-color: #013a33;" target="_blank">
                            <i class="bi bi-whatsapp me-2"></i>Bilgi Al
                        </a> -->
                        <a href="/Home/İletisim" class="btn btn-sm text-white ms-1" id="mailGonderButton" style="background-color: #013A33;">
                            <i class="fas fa-envelope me-2"></i>Mail Gönder
                        </a>
                    </div>
                    <!-- Dil Seçimi Dropdown -->
                    <div class="dropdown order-5" id="languageDropdown">
                        <a class="btn btn-sm butonlar-dil dropdown-toggle custom-dropdown-toggle" href="#" id="navbarDropdownMenuAvatar" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end text-black" aria-labelledby="navbarDropdownMenuAvatar">
                            <li>
                                <a class="dropdown-item" href="/Home/Index" data-lang="TR">
                                    Türkçe
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Home/IndexEng" data-lang="ENG">
                                    English
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Home/İletisim" data-lang="Рус.">
                                    Русский
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    @RenderBody()
    <!-- FOOTER -->
    <div class="container-fluid p-0">
        <footer class="text-center text-lg-start text-black bg-white">
            <div class="container page-border mt-0"></div>
            <!-- Section: Social media -->
            <section class="d-flex justify-content-center p-2 bg-white">
                <!-- Left -->
                <div class="me-lg-5">
                    <span>Sosyal medya hesaplarımız : </span>
                </div>
                <!-- Right -->
                <div class="d-flex justify-content-center">
                    <a href="https://www.linkedin.com/company/oz-partners/" class="me-4" style="background-color: #013A33; color: white; text-decoration: none; display: inline-flex; align-items: center; padding: 4px 8px; border-radius: 4px;" target="_blank">
                        <i class="fab fa-linkedin" style="font-size: 16px; margin-right: 8px;"></i>
                        <span style="font-size: 12px;">Takip Et</span>
                    </a>
                </div>
            </section>
            <div class="container page-border"></div>
            <!-- Copyright -->
            <div class="text-center mt-5" style="font-size:12px; background-color: #ffffff">
                ©
                <a class="text-black" href="">1974-2024 Öz&Partners; Avukatlık Ofisi - Tüm Hakları Saklıdır</a>
            </div>
        </footer>
    </div>
    <!-- bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <script src="~/js/language.js" asp-append-version="true"></script>


    <!-- Vanilla JavaScript ile olayları ekleme -->
    <!-- JavaScript Kodu -->

</body>

</html>
