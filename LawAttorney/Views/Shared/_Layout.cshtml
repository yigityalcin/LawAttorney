<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LawAttorney</title>
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LawAttorney.styles.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/assets/flaticon.css">
    <link rel="stylesheet" href="~/css/animate.css">
</head>

<body>
    <div>
        <div class="col-xl-12 info-bar text-center">
            <span class="span-phone"><i class="fas fa-phone"></i> Telefon: (532) 499-1974</span>
            <span class="span-mail"><i class="fas fa-envelope"></i> Email: <a class="span-mail1 text-white" href="mailto:info@ozpartnershukuk.com">info@ozpartnershukuk.com</a></span>
            <span class="span-hours me-2"><i class="fas fa-clock"></i> Çalışma Saatleri: Pazartesi - Cuma, 09:00 - 18:00</span>
        </div>
        <div class="container">
            <nav class="navbar navbar-expand-lg d-lg-block">
                <div class="row mb-lg-3">
                    <div class="col-3 mt-lg-3">
                        <a class="navbar-brand ms-lg-4 mt-2" href="/Home/Index">
                            <img src="~/assets/img/Logo/ailogogold.png" alt="Logo" height="80" class="img-brand">
                        </a>
                    </div>
                    <div class="col-9">
                        <div class="d-flex justify-content-end mb-lg-4">
                            <div class="d-flex butonlar align-items-center me-lg-4">
                                <div class="d-md-flex butonlar-mail align-items-center">
                                    <a href="/Home/İletisim" class="text-white ms-1 mailButton" id="mailGonderButton">
                                        <i class="fas fa-envelope me-lg-2"></i>Hızlı İletişim
                                    </a>
                                </div>
                                <div class="dropdown" id="languageDropdown">
                                    <a class="btn btn-sm butonlar-lang dropdown-toggle custom-dropdown-toggle border shadow" href="#" id="navbarDropdownMenuAvatar" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    </a>

                                    <ul class="dropdown-menu dropdown-menu-end text-black" aria-labelledby="navbarDropdownMenuAvatar">
                                        <li>
                                            <a class="dropdown-item" href="/Home/Index" data-lang="TR">
                                                Türkçe
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/Home/IndexEng" data-lang="ENG">
                                                English
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="/Home/İletisim" data-lang="Рус.">
                                                Русский
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="d-flex justify-content-center">
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav flex-row d-flex">
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Home/Index">Ana Sayfa</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Home/Kurumsal">Kurumsal</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Home/Ekibimiz">Ekibimiz</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Home/CalismaAlanlari">Çalışma Alanları</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Home/Makaleler">Makaleler</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/Home/İletisim">İletişim</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    @RenderBody()
    <!-- FOOTER -->
    <div class="container-fluid">
        <footer class="text-center text-lg-start text-black bg-white">
            <div class="container page-border mt-lg-0"></div>
            <section class="d-flex justify-content-center p-2 bg-white">
                <div class="sosyal me-lg-2">
                    <span>Sosyal medya hesaplarımız : </span>
                </div>
                <div class="d-flex justify-content-center">
                    <a href="https://www.linkedin.com/company/oz-partners/" class="me-lg-4" style="background-color: #013A33; color: white; text-decoration: none; display: inline-flex; align-items: center; padding: 4px 8px; border-radius: 4px;" target="_blank">
                        <i class="fab fa-linkedin" style="font-size: 16px; margin-right: 8px;"></i>
                        <span style="font-size: 12px;">Takip Et</span>
                    </a>
                </div>
            </section>
            <div class="container page-border"></div>
            <!-- Copyright -->
            <div class="text-center mt-5" style="font-size:12px; background-color: #ffffff">
                ©
                <a class="sosyal" href="">1974-2024 Öz&Partners; Avukatlık Ofisi - Tüm Hakları Saklıdır</a>
            </div>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <script src="~/js/language.js" asp-append-version="true"></script>

</body>

</html>
