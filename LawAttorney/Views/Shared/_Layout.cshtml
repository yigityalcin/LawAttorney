<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LawAttorney</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LawAttorney.styles.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Nunito' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container p-0">
        <nav class="navbar navbar-expand-md mt-5 pt-4" style="background-color:#093A34">
            <div class="container">
                <!-- Toggle button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Logo -->
                <a class="navbar-brand ms-4" href="#">
                    <img src="~/assets/img/avukatlik-logo.png" alt="Logo" height="120" class="img">
                </a>

                <!-- Menü Sekmeleri -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-lg-0 me-lg-5">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Kurumsal">Kurumsal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Ekibimiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Çalışma Alanları</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Makaleler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">İletişim/Ulaşım</a>
                        </li>
                    </ul>
                </div>
                <div class="d-grid gap-2 col-2 mx-auto me-5">
                    <button class="btn text-white" type="button" style="background-color: #a37e2c;" data-mdb-ripple-init><i class="fas fa-person me-2"></i>Danışan Girişi</button>
                    <button class="btn text-white" type="button" style="background-color: #545454;" data-mdb-ripple-init><i class="bi bi-whatsapp me-2"></i>Bilgi Al</button>
                </div>


                <!-- Sağdaki Elemanlar ve Dikdörtgen Butonlar -->
                <div class="d-flex align-items-center me-2">
                    <!-- Sağdaki Elemanlar -->
                    <div class="dropdown">
                        <a class="dropdown-toggle d-flex align-items-center hidden-arrow" href="#" id="navbarDropdownMenuAvatar" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/assets/img/united-kingdom.png" alt="Lang" height="30" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuAvatar">
                            <li>
                                <a class="dropdown-item" href="#">
                                    <img src="~/assets/img/united-kingdom.png" alt="Lang" height="30" />
                                    English
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <img src="~/assets/img/russia.png" alt="Lang" height="30" />
                                    Russian
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <img src="~/assets/img/turkey.png" alt="Lang" height="30" />
                                    Turkish
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
            @RenderBody()
        @* FOOTER *@
        <div class="container p-0">
            <footer class="text-center text-lg-start text-white"
                    style="background-color: #093A34">
                <!-- Section: Social media -->
                <section class="d-flex justify-content-between p-4"
                         style="background-color: #212529">
                    <!-- Left -->
                    <div class="me-5">
                        <span>Get connected with us on social networks:</span>
                    </div>
                    <!-- Left -->
                    <!-- Right -->
                    <div>
                        <a href="" class="text-white me-4">
                            <i class="bi-facebook"></i>
                        </a>
                        <a href="" class="text-white me-4">
                            <i class="bi-twitter"></i>
                        </a>
                        <a href="" class="text-white me-4">
                            <i class="bi-google"></i>
                        </a>
                        <a href="" class="text-white me-4">
                            <i class="bi-instagram"></i>
                        </a>
                        <a href="" class="text-white me-4">
                            <i class="bi-linkedin"></i>
                        </a>
                        <a href="" class="text-white me-4">
                            <i class="bi-github"></i>
                        </a>
                    </div>
                    <!-- Right -->
                </section>
                <!-- Section: Social media -->
                <!-- Section: Links  -->
                <section class="">
                    <div class="container text-center text-md-start mt-5">
                        <!-- Grid row -->
                        <div class="row mt-3">
                            <!-- Grid column -->
                            <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                                <!-- Content -->
                                <h6 class="text-uppercase fw-bold">YALCIN'S LAW FIRM</h6>
                                <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                    style="width: 60px; background-color: #093A34; height: 2px" />
                                <p>
                                    By making an online appointment with our lawyers, you can make a live video call through our system.
                                </p>
                            </div>
                            <!-- Grid column -->
                            <!-- Grid column -->
                            <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                                <!-- Links -->
                                <h6 class="text-uppercase fw-bold">QUICK LINKS</h6>
                                <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                    style="width: 60px; background-color: #093A34; height: 2px" />
                                <p>
                                    <a href="#!" class="text-white">Attorney Profile</a>
                                </p>
                                <p>
                                    <a href="#!" class="text-white">Practice Areas</a>
                                </p>
                                <p>
                                    <a href="#!" class="text-white">Testimonials</a>
                                </p>
                                <p>
                                    <a href="#!" class="text-white">Contact Us</a>
                                </p>
                            </div>
                            <!-- Grid column -->
                            <!-- Grid column -->
                            <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                                <!-- Links -->
                                <h6 class="text-uppercase fw-bold">REACH US</h6>
                                <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                    style="width: 60px; background-color: #093A34; height: 2px" />
                                <p>
                                    <a href="#!" class="text-white">
                                        Official Gazette
                                    </a>
                                </p>
                                <p>
                                    <a href="#!" class="text-white">Republic of Turkey Ministry of Justice</a>
                                </p>
                                <p>
                                    <a href="#!" class="text-white">Constitutional Court</a>
                                </p>
                                <p>
                                    <a href="#!" class="text-white">Press</a>
                                </p>
                            </div>
                            <!-- Grid column -->
                            <!-- Grid column -->
                            <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                                <!-- Links -->
                                <h6 class="text-uppercase fw-bold">Contact</h6>
                                <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                    style="width: 60px; background-color: #093A34; height: 2px" />
                                <p>
                                    <i class="fas fa-home mr-3"></i> 2021 Richard Jones Road, Suite 150E
                                    Nashville, TN 37215
                                </p>
                                <p><i class="fas fa-envelope mr-3"></i> info@example.com</p>
                                <p><i class="fas fa-phone mr-3"></i> +90 534 346 1030</p>
                                <p><i class="fas fa-print mr-3"></i> +01 234 567 89</p>
                            </div>
                            <!-- Grid column -->
                        </div>
                        <!-- Grid row -->
                    </div>
                </section>
                <!-- Section: Links  -->
                <!-- Copyright -->
                <div class="text-center p-3"
                     style="background-color: #212529">
                    © 2024 Copyright:
                    <a class="text-white" href="https://mdbootstrap.com/">Yalcin Law Firm 2024 </a>
                </div>
                <!-- Copyright -->
            </footer>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/scripts.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


